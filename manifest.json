{
    "manifest_version": 2,
    "name": "Norp Auto Browse",
    "version": "1.0",
    "description": "Automatically loads porn videos 1 after another",
    "browser_specific_settings": {
        "gecko": {
            "id": "addon@example.com",
            "strict_min_version": "42.0"
        }
    },
    "icons": {
        "48": "icons/nab-48.png",
        "96": "icons/nab-96.png"
    },
    "background": {
        "scripts": [
            "./nab.js"
        ],
        "persistent": true,
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["*://*.xnxx.com/*"],
            "js": ["./content_scripts/xnxx.js"]
        },
        {
            "matches": ["*://*.xvideos.com/*"],
            "js": ["./content_scripts/xvideos.js"]
        }
    ],
    "permissions": [
        "webNavigation",
        "activeTab",
        "storage",
        "tabs",
        "unlimitedStorage",
        "*://*.xnxx.com/*",
        "*://*.xvideos.com/*"
    ],
    "browser_action": {
        "default_icon": {
            "19": "button/nab-19.png",
            "38": "button/nab-38.png"
        },
        "default_title": "Cum Configure Me",
        "default_popup": "./popup/popup.html"
    },
    "web_accessible_resources": [
        "icons/temp_fav_icon.png"
    ]
}
